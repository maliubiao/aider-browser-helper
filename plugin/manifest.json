{
    "manifest_version": 3,
    "name": "URL HTML Fetcher",
    "version": "1.0",
    "description": "This extension fetches the HTML content of a URL and sends it back to a WebSocket server for further processing.",
    "background": {
        "service_worker": "background.js"
    },
    "permissions": [
        "tabs",
        "activeTab",
        "scripting"
    ],
    "host_permissions": [
        "http://localhost:8888/*"
    ],
    "icons": {
        "16": "icons/icon16.png",
        "32": "icons/icon32.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }
}
